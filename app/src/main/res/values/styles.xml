<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/color_white</item>
    </style>

    <style name="NoActionBarSplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
    </style>


    <!--  Font  -->

    <style name="FontBeautifulPeople" parent="TextAppearance.AppCompat">
        <item name="fontPath">font/BeautifulPeople_Regular.ttf</item>
    </style>
    <style name="FontSFProDisplayBlack" parent="TextAppearance.AppCompat">
        <item name="fontPath">font/SF-Pro-Display-Black.otf</item>
    </style>

    <style name="FontSFProDisplayRegular" parent="TextAppearance.AppCompat">
        <item name="fontPath">font/SFProDisplay-Regular.ttf</item>
    </style>

    <style name="FontSFProTextRegular" parent="TextAppearance.AppCompat">
        <item name="fontPath">font/SFProText-Regular.ttf</item>
    </style>

</resources>
