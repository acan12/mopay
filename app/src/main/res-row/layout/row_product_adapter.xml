<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:paddingTop="20dp">

    <app.beelabs.com.mopay.ui.component.view.RoundRectCornerImageView
        android:id="@+id/imageProduct"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/demo_food"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/nameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:text="PakChoy"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/imageProduct"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/descProduct"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="Shortbread, chocolat dsajdskajd lkdjasd jlkjd asdjklsj as dlas "
        android:textAlignment="textStart"
        app:layout_constraintLeft_toRightOf="@+id/imageProduct"
        app:layout_constraintTop_toBottomOf="@+id/nameProduct" />

    <TextView
        android:id="@+id/priceProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:lineSpacingExtra="20px"
        android:text="IDR 20.000"
        android:textAppearance="@style/FontSFProDisplayRegular"
        android:textColor="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descProduct" />


    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="20dp"
        android:background="@color/line_grey_color"
        app:layout_constraintTop_toBottomOf="@id/imageProduct" />


</androidx.constraintlayout.widget.ConstraintLayout>